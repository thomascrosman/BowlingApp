<Window x:Class="BowlingApp.LoadRollsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowlingApp"
        mc:Ignorable="d"
        Title="Load Rolls" Height="100" Width="500">
    <Grid>
        <!-- Accept or Cancel -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
            <Label>Load Rolls</Label>
            <TextBox x:Name="tbRolls"></TextBox>
            <Button Name="okButton" Click="btnDialogOk_Click" IsDefault="True">OK</Button>
        </StackPanel>
    </Grid >
</Window>
