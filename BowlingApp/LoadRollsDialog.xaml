<Window x:Class="BowlingApp.LoadRollsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BowlingApp"
        mc:Ignorable="d"
        Title="Load/Edit Rolls" Height="165" Width="500">
    <Grid Margin="10">
        <!-- Accept or Cancel -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
            <Label>Rolls (No Validation)</Label>
            <TextBox Margin="5,0,5,0" x:Name="tbRolls"></TextBox>
            <Button Margin="5,5,5,0" Name="okButton" Click="btnDialogOk_Click" IsDefault="True">OK</Button>
            <Button Margin="5,5,5,0" Click="btnDialogCancel_Click" IsDefault="True">Cancel</Button>
        </StackPanel>
    </Grid >
</Window>
